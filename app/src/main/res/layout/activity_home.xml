<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="200dp"
            android:fontFamily="sans-serif-thin"
            android:text="Welcome to"
            android:textColor="#000"
            android:textSize="22sp" />
       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
            android:layout_marginRight="16dp"
            android:text="NStyle Beauty Lounge"
            android:fontFamily="@font/fonts_gotham"
            android:textColor="#616161"
            android:textSize="22sp"
            android:textStyle="bold"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#fff"
                android:fontFamily="@font/fonts_gotham"
                android:onClick="menu"
                android:text="Menu"
                android:textAllCaps="false"
                android:textColor="#000" />

            <Button
                android:layout_width="1.1dp"
                android:layout_height="65dp"
                android:background="@drawable/button_gradient" />


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#fff"
                android:fontFamily="@font/fonts_gotham"
                android:onClick="profile"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="#000" />
        </LinearLayout>

        <Button
            android:layout_width="265dp"
            android:layout_height="0.8dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/button_gradient2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#fff"
            android:fontFamily="@font/fonts_gotham"
            android:textColor="#000"
            android:text="Call us"
            android:onClick="call"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:background="@drawable/button_gradient1" />


        <Button
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/fonts_gotham"
            android:textColor="#000"
            android:text="Book Now"
            android:onClick="book"
            android:background="#fff"
            android:textAllCaps="false"
            android:clickable="true"/>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo_home" />
    </LinearLayout>
</LinearLayout>
