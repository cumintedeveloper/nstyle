<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/image_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:id="@+id/sv1"
        android:layout_marginBottom="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:background="@drawable/trans_white_rectangle"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/nstyle_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRIST NAME"
            android:textColor="#6d6e70"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/dp_20"
            android:fontFamily="@font/fonts_gotham" />


        <EditText
            android:id="@+id/input_fristname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_gotham"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#6d6e70"
            android:text="LAST NAME"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/dp_20"
            android:fontFamily="@font/fonts_gotham"/>

        <EditText
            android:id="@+id/input_lastname"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_gotham"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#6d6e70"
            android:text="PHONE NUMBER"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/dp_20"
            android:fontFamily="@font/fonts_gotham"/>

        <EditText
            android:id="@+id/input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_gotham"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#6d6e70"
            android:text="EMAIL"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/dp_20"
            android:fontFamily="@font/fonts_gotham"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:layout_marginTop="@dimen/dp_20"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:fontFamily="@font/fonts_gotham"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/black"
            android:elevation="4dp"
            android:padding="15dp"
            android:onClick="next"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/forgot_password"
        style="@android:style/TextAppearance.DeviceDefault"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Already a member?Log in"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/fonts_gotham"/>
</RelativeLayout>